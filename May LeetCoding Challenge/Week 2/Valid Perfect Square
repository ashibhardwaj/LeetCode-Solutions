class Solution {
public:
    bool isPerfectSquare(int num) {
        if(num==1)
            return true;
        long i = 2;
        while(i*i<=(long)num)
        {
            if(i*i==num)
                return true;
            i++;
        }
        return false;
    }
};

//Binary approach can be used to find sqrt
